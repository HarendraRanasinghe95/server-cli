{
  "server": {
    "project": "bm-example.api.blinkm.io",
    "region": "ap-southeast-2",
    "cors": true,
    "routes": [
      {
        "route": "/request",
        "module": "./api/request/index.js"
      },
      {
        "route": "/books",
        "module": "./api/books.js"
      },
      {
        "route": "/books/{id}",
        "module": "./api/book.js"
      },
      {
        "route": "/books/{id}/chapters/{chapterNo}",
        "module": "./api/chapter.js"
      }
    ]
  }
}
